/* pages/add/add.wxss */
.container {
  padding: 30rpx;
}

.api-tip {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.api-config {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.config-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.config-hint {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.btn-save {
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.photo-section {
  width: 100%;
  height: 400rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.photo-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.photo-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.photo-text {
  font-size: 30rpx;
  color: #333;
}

.photo-hint {
  font-size: 26rpx;
  color: #999;
  margin: 16rpx 0;
}

.photo-link {
  font-size: 28rpx;
  color: #667eea;
}

.photo-preview {
  width: 100%;
  height: 100%;
}

.identifying {
  padding: 20rpx;
  text-align: center;
  background: #fff3cd;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  color: #856404;
}

.form-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: #fff;
}

.picker-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: #fff;
}

.placeholder {
  color: #999;
}

.textarea-field {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 30rpx;
  min-height: 150rpx;
  background: #fff;
}

.btn-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
}

.btn-secondary {
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
}
