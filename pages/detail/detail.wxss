/* pages/detail/detail.wxss */
.container {
  padding: 20rpx;
}

.detail-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.medicine-image {
  width: 100%;
  height: 400rpx;
}

.medicine-image image {
  width: 100%;
  height: 100%;
}

.medicine-info {
  padding: 30rpx;
}

.medicine-name {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.action-buttons {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4A90E2 0%, #67B8DE 100%);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

.btn-danger {
  background: #fff;
  color: #e74c3c;
  border: 2rpx solid #e74c3c;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 32rpx;
}

.records-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.record-icon {
  font-size: 32rpx;
}

.record-time {
  font-size: 28rpx;
  color: #333;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}
