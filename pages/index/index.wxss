/* pages/index/index.wxss */
.header {
  background: linear-gradient(135deg, #4A90E2 0%, #67B8DE 100%);
  padding: 40rpx 30rpx;
  border-radius: 0 0 30rpx 30rpx;
  margin: -20rpx -20rpx 30rpx -20rpx;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
}

.header-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 10rpx;
}

.add-section {
  margin-bottom: 30rpx;
}

.btn-add {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #67B8DE 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx;
  font-size: 32rpx;
}

.add-icon {
  font-size: 40rpx;
  font-weight: 300;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-count {
  font-size: 26rpx;
  color: #4A90E2;
}

.card-link {
  font-size: 26rpx;
  color: #4A90E2;
}

.card-header.warning .card-title {
  color: #e74c3c;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.record-name {
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 26rpx;
  color: #999;
}

.medicine-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.medicine-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.medicine-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.medicine-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.medicine-expiry {
  font-size: 24rpx;
  color: #999;
}

.medicine-arrow {
  font-size: 28rpx;
  color: #ccc;
}

.empty-state {
  padding: 40rpx;
  text-align: center;
}

.empty-state text {
  display: block;
  color: #999;
  margin-bottom: 20rpx;
}

.btn-small {
  background: #4A90E2;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
}

.action-icon {
  font-size: 48rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}
